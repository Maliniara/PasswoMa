@model PasswordManager.Models.PasswordEntry

@{
    ViewData["Title"] = "Add Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Add Password</h1>

    <form asp-action="Add">
        <div class="form-group">
            <label asp-for="URL" class="control-label">URL</label>
            <input asp-for="URL" class="form-control" type="url" />
            <span asp-validation-for="URL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User" class="control-label">Username</label>
            <input asp-for="User" class="form-control" />
            <span asp-validation-for="User" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
