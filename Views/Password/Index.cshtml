@model IEnumerable<PasswordManager.Models.PasswordEntry>

@{
    ViewData["Title"] = "Password Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col text-left">
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back to Home</a>
        </div>
        <div class="col text-right">
            <a class="btn btn-primary float-end" href="@Url.Action("Add", "Password")">Add New Password</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>URL</th>
                <th>User</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a href="@EnsureUrlProtocol(item.URL)" target="_blank" rel="noopener noreferrer">
                            @item.URL
                        </a>
                    </td>
                    <td>@item.User</td>
                    <td>
                        <span class="password-blur">@item.Password</span>
                    </td>
                    <td>
                        <a class="btn btn-secondary" href="@Url.Action("Edit", "Password", new { id = item.Id })">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    public string EnsureUrlProtocol(string url)
    {
        if (!url.StartsWith("http://") && !url.StartsWith("https://"))
        {
            return "https://" + url;
        }
        return url;
    }
}
