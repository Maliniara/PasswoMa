@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PasswoMa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            text-align: center;
            flex-grow: 1; 
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .jumbotron {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .jumbotron:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }

        .jumbotron h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .jumbotron p {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: #666;
        }

        .jumbotron .btn-primary {
            font-size: 1.25rem;
            padding: 1rem 2rem;
            border-radius: 30px;
            transition: background-color 0.3s ease-in-out, transform 0.2s ease-in-out;
        }

        .jumbotron .btn-primary:hover {
            background-color: #2c3e50;
            transform: scale(1.05);
        }

        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            width: 100%;
        }

        footer p {
            margin: 0;
        }

        footer a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Welcome to PasswoMa</h1>
            <p class="lead">Securely manage your passwords and keep them organized.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Password")">Go to Password Manager</a>
        </div>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2024 PasswoMa. All rights reserved. | <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
