@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Password Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.cshtml.css" asp-append-version="true" />
    <style>
        body {
            overflow: hidden; 
            font-family: Arial, sans-serif;
            background-color: #272727;
        }


        .animated-bg div {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #3498db; 
            opacity: 0.3;
            transform: translateX(-100%);
            transition: transform 15s linear;
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
            padding-top: 5rem;
        }

        .jumbotron {
        background: linear-gradient(45deg, #2980b9, #6dd5fa);
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        }

        }

        .jumbotron:hover {
            transform: scale(1.05);
        }

        .jumbotron h1 {
            font-size: 3rem;
            margin-bottom: 2rem;
            color: #333;
        }

        .jumbotron p {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            color: #666;
        }

        .jumbotron .btn-primary {
            font-size: 1.25rem;
            padding: 1rem 2rem;
            border-radius: 30px;
            transition: background-color 0.3s ease-in-out;
        }

        .jumbotron .btn-primary:hover {
            background-color: #2c3e50;
        }
    </style>
</head>
<body>
    <div class="animated-bg">
        <div></div>
    </div>

    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Password Manager</h1>
            <p class="lead">Securely manage your passwords and keep them organized.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Password")">Go to Password Manager</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
